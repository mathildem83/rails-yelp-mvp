<h1 class="border-bottom p-3 mb-4">Les restaurants</h1>

<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6 col-12 col-lg-3">
      <div class="card m-3 shadow-sm" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category %></h6>
          <%= link_to "See details", restaurant_path(restaurant)  %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary ms-3"%>
